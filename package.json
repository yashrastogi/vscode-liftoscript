{
    "name": "vscode-liftoscript-syntax",
    "displayName": "Liftoscript: Language Support",
    "description": "Syntax highlighting, code formatting and code folding support for the Liftoscript language.",
    "version": "0.0.2",
    "publisher": "yashrastogi1",
    "repository": {
        "type": "git",
        "url": "https://github.com/yashrastogi/vscode-liftscript"
    },
    "engines": {
        "vscode": "^1.97.0"
    },
    "activationEvents": [
        "onLanguage:liftoscript",
        "onCommand:liftoscript.format"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [],
        "languages": [
            {
                "id": "liftoscript",
                "aliases": [
                    "Liftoscript",
                    "liftoscript"
                ],
                "extensions": [
                    ".liftoscript"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "liftoscript",
                "scopeName": "source.liftoscript",
                "path": "./syntaxes/liftoscript.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^14.14.6",
        "@types/vscode": "^1.97.0",
        "typescript": "^4.0.3"
    }
}
